{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        }
    },
    "variables": {
        "publisherName": "Microsoft.EbpfForWindows",
        "typeName": "EbpfForWindows",
        "label": "eBPF for Windows Extension for Windows Virtual Machines",
        "description": "eBPF for Windows - Azure VM Extension for IaaS",
        "companyName": "Microsoft",
        "eula": "https://github.com/microsoft/ebpf-for-windows/blob/main/LICENSE.txt",
        "privacyUri": "https://privacy.microsoft.com",
        "homepageUri": "https://github.com/microsoft/ebpf-for-windows"
    },
    "resources": [{
            "type": "Microsoft.Compute/sharedVMExtensions",
            "name": "[concat(variables('publisherName'), '.', variables('typeName'))]",
            "apiVersion": "2019-12-01",
            "location": "[parameters('location')]",
            "properties": {
                "identifier": {
                    "publisher": "[variables('publisherName')]",
                    "type": "[variables('typeName')]"
                },
                "label": "[variables('label')]",
                "description": "[variables('description')]",
                "companyName": "[variables('companyName')]",
                "eula": "[variables('eula')]",
                "privacyUri": "[variables('privacyUri')]",
                "homepageUri": "[variables('homepageUri')]"
            }
        }
    ]
}